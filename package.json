{
  "name": "briya-room-reservations",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "briya-calendar-core"
  ],
  "scripts": {
    "dev": "concurrently -k -n BACKEND,WORKER,FRONTEND -c blue,magenta,green \"npm run dev --prefix backend\" \"npm run worker --prefix backend\" \"npm run dev --prefix frontend\"",
    "backend": "npm run dev --prefix backend",
    "worker": "npm run worker --prefix backend",
    "frontend": "npm run dev --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  },
  "dependencies": {
    "@briya/calendar-core": "^1.0.0"
  }
}
